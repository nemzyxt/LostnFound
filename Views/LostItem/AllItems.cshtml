@model List<LostnFound.Models.LostItemModel>
@using LostnFound.ViewModels

@{
    ViewData["Title"] = "All Items";
}

<div class="container mt-4">
    <h2>All Lost Items</h2>

    @if (Model.Any())
    {
        <div class="mb-3">
            <input id="searchInput" type="text" class="form-control" placeholder="Search by Item Name" />
        </div>

        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Item Name</th>
                    <th>Description</th>
                    <th>Date Lost</th>
                    <th>Location Lost</th>
                    <th>Claim</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ItemName</td>
                        <td>@item.Description</td>
                        <td>@item.DateLost.ToShortDateString()</td>
                        <td>@item.LocationLost</td>
                        <td>
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#claimModal_@item.ItemId">
                                Claim
                            </button>
                        </td>
                    </tr>

                    <!-- Modal for Claim Item -->
                    <div class="modal fade" id="claimModal_@item.ItemId" tabindex="-1" role="dialog" aria-labelledby="claimModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="claimModalLabel">Claim Item</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <!-- Your claim item form goes here -->
                                    <form asp-action="ClaimItem" asp-controller="LostItem" method="post">
                                        <!-- Date Found -->
                                        <div class="form-group">
                                            <label asp-for="DateFound">Date Found</label>
                                            <input asp-for="DateFound" class="form-control" required />
                                            <span asp-validation-for="DateFound" class="text-danger"></span>
                                        </div>

                                        <!-- Location Found -->
                                        <div class="form-group">
                                            <label asp-for="LocationFound">Location Found</label>
                                            <input asp-for="LocationFound" class="form-control" required />
                                            <span asp-validation-for="LocationFound" class="text-danger"></span>
                                        </div>

                                        <!-- Finder's Contact -->
                                        <div class="form-group">
                                            <label asp-for="FindersContact">Finder's Contact</label>
                                            <input asp-for="FindersContact" class="form-control" required />
                                            <span asp-validation-for="FindersContact" class="text-danger"></span>
                                        </div>

                                        <input type="hidden" asp-for="ItemId" value="@item.ItemId" />

                                        <button type="submit" class="btn btn-primary">Claim Item</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No lost items</p>
    }
</div>

@section scripts {
    @if (Model.Any())
    {
        <script>
            $(document).ready(function () {
                $('#searchInput').on('keyup', function () {
                    var value = $(this).val().toLowerCase();
                    $('tbody tr').filter(function () {
                        $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                    });
                });
            });
        </script>
    }
}
